{
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      { "source": "**", "destination": "/index.html" }
    ],
    "redirects": [
      { 
        "source": "/www.sparkyslogistic.com/**", 
        "destination": "https://sparkyslogistics.com", 
        "type": 301 
      },
      {
        "source": "sparkyslogistic.com/**",
        "destination": "https://sparkyslogistics.com",
        "type": 301
      }
    ]
  }
}

